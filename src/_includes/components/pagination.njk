<nav class='pages' aria-label="pagination">
  <ol class='pages__list'>
    <li>{% if pagination.href.previous %}<a class='pages__item' href={{ pagination.href.previous }} aria-label='Go to the previous page'>
  <svg role='img' xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><title>Left arrow</title><path d="M15 18l-6-6 6-6"/></svg>        
</a>{% endif %}</li>
{%- for pageEntry in pagination.pages %}          
    <li ><a class='pages__item' href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{ loop.index-1 }}</a></li>
{%- endfor %}
<li>{% if pagination.href.next %}<a class='pages__item' href={{pagination.href.next}} aria-label='Go to the next page'>
<svg role='img' xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><title>Right arrow</title><path d="M9 18l6-6-6-6"/></svg>
</a>{% endif %}</li>
</ol>
</nav>